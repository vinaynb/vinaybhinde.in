{
	"less": {
		"files": "./src/less/{home,blog,post,archive,about,talks,404,code}.less",
		"output": "./_includes/styles/"
	},
	"bundles": [
		{
			"input": "./src/js/inline.js",
			"output": "./_includes/scripts/inline.liquid"
		},
		{
			"input": "./src/js/font.js",
			"output": "./assets/js/font.js"
		},
		{
			"input": "./src/js/main.js",
			"output": "./assets/js/main.js"
		}
	],
	"favicon": {
		"entry": "./src/favicon/favicon.png",
		"output": "./assets/favicon/",
		"path": "/assets/favicon/",
		"html": "./_includes/favicons.liquid"
	},
	"images": [
		{
			"entry": "./src/favicon/favicon.png",
			"output": "./assets/images/twitter-card-image.jpeg",
			"quality": 85,
			"resize": [
				300,
				300
			]
		},
		{
			"entry": "./src/favicon/favicon.png",
			"output": "./assets/images/feed.jpeg",
			"quality": 85,
			"resize": [
				200,
				200
			]
		},
		{
			"entry": "./src/img/heuristic--caching-1.jpg",
			"output": "./assets/images/heuristic--caching-1.jpg",
			"quality": 85
		},
		{
			"entry": "./src/img/curious-case-of-csp-1.png",
			"output": "./assets/images/curious-case-of-csp-1.png",
			"quality": 85
		},
		{
			"entry": "./src/img/curious-case-of-csp-2.png",
			"output": "./assets/images/curious-case-of-csp-2.png",
			"quality": 85
		}
	]
}